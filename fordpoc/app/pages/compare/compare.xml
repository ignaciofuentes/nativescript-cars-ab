<page
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:drawer="nativescript-telerik-ui-pro/sidedrawer"
  xmlns:widgets="shared/widgets"
  loaded="loaded"
  navigatedTo="navigatedTo">
   <page.actionBar>
    <action-bar title="Compare">
        <navigation-button text="" android.systemIcon = "ic_menu_back"/>
    </action-bar>
   </page.actionBar>

    <scroll-view>
      <!-- Settings page content -->
        <grid-layout loaded="mainContentLoaded" rows="auto,auto,auto">
            <!-- Images -->
            <grid-layout columns="*,*">
                <image class="carImage" row="0" col="0" src="{{ car1.imageUrl }}" />
                <image class="carImage" id="image2" row="0" col="1" src="{{ car2.imageUrl }}" />
                <image
                    row="0" col="0"
                    tap="favoriteCar1ButtonTapped"
                    stretch="none"
                    src="{{ car1Favorited ? 'res://star_white' : 'res://star_light_blue' }}"
                    horizontalAlignment="right"
                    verticalAlignment="top" />
                <image
                    row="0" col="1"
                    tap="favoriteCar2ButtonTapped"
                    stretch="none"
                    src="{{ car2Favorited ? 'res://star_white' : 'res://star_light_blue' }}"
                    horizontalAlignment="right"
                    verticalAlignment="top" />
            </grid-layout>
            <!-- Details List -->
            <repeater items="{{ details }}" row="1">
                <repeater.itemTemplate>
                    <grid-layout columns="*,*" rows="auto,auto">
                        <label class="itemHeader" text="{{ key }}" col="0" row="0" colSpan="2" horizontalAlignment="left" />
                        <label class="itemValue" text="{{ value.car1 }}" row="1" col="0" horizontalAlignment="left" />
                        <label class="itemValue" text="{{ value.car2 }}" row="1" col="1" horizontalAlignment="left" />                
                        <stack-layout class="line" row="1" col="0" colSpan="2" verticalAlignment="bottom" />
                    </grid-layout>
                </repeater.itemTemplate>
            </repeater>
            <!-- Buttons -->
            <grid-layout row="2" columns="*,*" style="margin:100 0 10 0" height="40">
                <button tap="car1SelectButtonTapped" text="Select" class="selectButton" col="0" />
                <button tap="car2SelectButtonTapped" text="Select" class="selectButton" col="1" /> 
             </grid-layout>   
        </grid-layout>
    </scroll-view>
  
</page>