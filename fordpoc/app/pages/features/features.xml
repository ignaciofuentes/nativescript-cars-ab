<page
  xmlns="http://schemas.nativescript.org/tns.xsd"
  loaded="loaded"
  navigatedTo="pageNavigatedTo">

  <page.actionBar>
    <action-bar title="Browse Primary Features">
        <NavigationButton visibility="collapsed"/>
    </action-bar>
  </page.actionBar>
  
    <!-- Feature filter view -->
    <grid-layout rows="auto, auto, *" loaded="mainContentLoaded">
        <Repeater items="{{ filters }}">
            <Repeater.itemsLayout>
                <WrapLayout />
            </Repeater.itemsLayout>
            <Repeater.itemTemplate>
                <Label text="{{ $value }}" class="tag"/>
            </Repeater.itemTemplate>
    </Repeater>
        <repeater items="{{ featureList }}" row="1">
            <repeater.itemTemplate>
                <grid-layout class="optionGrid" height="40" tap="itemTap">
                    <label text="{{ name }}" class="feature-label" verticalAlignment="center" col="0" row="0" />
                    <label text="&#xf105; " class="arrow" horizontalAlignment="right" verticalAlignment="center" col="0" />
                    <stack-layout class="separator" colSpan="2" verticalAlignment="bottom" />
                </grid-layout>
            </repeater.itemTemplate>
        </repeater>
        
        <button text="{{ buttonText }}" tap="showInventory" class="selectButton" row="2" height="40" verticalAlignment="bottom" />
        <activity-indicator busy="{{ isLoading }}" rowSpan="3" />
    </grid-layout>
</page>
