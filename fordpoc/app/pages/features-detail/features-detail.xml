<page
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:lv="nativescript-telerik-ui-pro/listview"
  navigatedTo="pageNavigatedTo"
  unloaded="detailsPageUnloaded"
  loaded="loaded"
  >

  <page.actionBar>
    <action-bar title="{{ selectedParentCategory.name }}">
      <action-bar.actionItems>
        <navigation-button />
      </action-bar.actionItems>
    </action-bar>
  </page.actionBar>
      <grid-layout rows="*" class="pageBackground">
            <lv:rad-list-view backgroundColor="#DBDBDB" id="detailsListView" items="{{ selectedParentCategory.categories }}" selectionBehavior="Press" multipleSelection="true" itemSelecting="onItemSelecting" itemSelected="onItemSelected" itemDeselected="onItemDeselected">
                <lv:rad-list-view.listViewLayout>
                    <lv:ListViewLinearLayout scrollDirection="Vertical" itemHeight="50" />
                </lv:rad-list-view.listViewLayout>
                <lv:rad-list-view.itemTemplate>
                    <grid-layout columns="auto,auto, *" >
                        <image width="24" marginLeft="9" col="0" row="0"  src="{{isSelected === true ? '~/ic_selected.png' : '~/ic_nonselected.png '}}" />     
                    
                        <label text="{{ name }}" class="listItemInSelectionMode" verticalAlignment="center" col="1" />
                        <label class="countDisplay" verticalAlignment="center" col="2" text="{{ countText }}" />
                        
                        <stack-layout class="separator" verticalAlignment="bottom" colSpan="3" />
                    </grid-layout>
                </lv:rad-list-view.itemTemplate>
            </lv:rad-list-view>
            <activity-indicator busy="{{ isLoading }}" />
      </grid-layout>

</page>
